{
    "name": "lend_root_repository",
    "version": "1.0.0",
    "private": true,
    "description": "Davigator crawling engine root repository",
    "scripts": {
        "dev": "turbo run dev",
        "dev:log": "turbo run dev --filter=@lend/logger",
        "dev:crawl": "turbo run dev --filter=@lend/crawler",
        "dev:cli": "turbo run dev --filter=@lend/cli",
        "dev:gen": "turbo run dev --filter=@lend/generator",
        "dev:api": "turbo run dev --filter=@lend/api",
        "build": "turbo run build",
        "build:watch": "turbo run build -- --watch",
        "build:fast": "turbo run build:fast",
        "clean": "pnpm -r --parallel exec rimraf dist .turbo *.log",
        "test": "vitest",
        "test:watch": "vitest --watch -u",
        "test:ci": "vitest run",
        "lint": "eslint 'packages/**/*.ts'",
        "lint:fix": "eslint --fix 'packages**/*.ts'",
        "prettier": "prettier --check packages",
        "prettier:fix": "prettier --write packages",
        "start": "turbo run start",
        "typecheck": "tsc --noEmit",
        "ts:typecheck": "tsc --noEmit --allowImportingTsExtensions --skipLibCheck",
        "ts:performance": "rimraf ts-perf && tsc --noEmit --generateTrace ts-perf",
        "reset": "pnpm clean && pnpm -r --parallel exec rimraf node_modules && rimraf node_modules",
        "prepublish": "pnpm test:ci && pnpm bench",
        "release": "pnpm build && changeset publish",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.11.2",
        "eslint-plugin-prettier": "^5.1.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.3",
        "tsup": "^8.0.1",
        "turbo": "^1.11.2",
        "vite-tsconfig-paths": "^4.2.3",
        "vitest": "^1.1.1",
        "ts-expect": "^1.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
